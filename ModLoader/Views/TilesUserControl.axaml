<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ModLoader.Views.TilesUserControl">
  <Border CornerRadius="6" BorderBrush="Gray" Background="LightGray" BorderThickness="2">
    <Grid RowDefinitions="80*,20*" Background="Beige" Width="230" Height="240">
      <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5 5 5 5"/>
      <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto" Margin="5 5 5 5">
        <Button Content="Подробнее"/>
        <Button Content="Скачать" Grid.Column="2"/>
      </Grid>
    </Grid>
  </Border>
</UserControl>
